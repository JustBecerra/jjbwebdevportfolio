---
import { ChallengeInfo } from '../consts';
import ProjectCard from './ProjectCard.astro';
import TechandTools from './TechandTools';
import TechandToolsMobile from './TechandToolsMobile.astro';
---

<section class="w-full h-screen">
	<div
		class="w-full lg:max-w-7xl lg:mx-auto mx-0 lg:h-full flex flex-col items-center px-8 gap-16"
	>
		<TechandTools client:load />
		<TechandToolsMobile />
		<h1 class="text-green font-bold text-3xl text-nowrap lg:text-4xl mb-8">
			Featured Personal Projects
		</h1>
		<div
			class="flex flex-col lg:flex-row w-full gap-8 lg:gap-0 lg:justify-around items-center"
		>
			{
				ChallengeInfo.map((info) => (
					<ProjectCard
						image={info.imageURL}
						icon={info.projectIcon}
						name={info.name}
						type={info.type}
						description={info.description}
						listIcons={info.listOfIcons}
						appLink={info.appLink}
						repoLink={info.repoLink}
					/>
				))
			}
		</div>
	</div>
</section>
