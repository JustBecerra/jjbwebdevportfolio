---
import { ChallengeInfo, ProfessionalInfo } from '../consts';
import { ProjectCard } from './ProjectCard';
import TechandTools from './TechandTools';
import TechandToolsMobile from './TechandToolsMobile.astro';
import { t } from 'i18next';
console.log(ChallengeInfo[0].listOfIcons[0].logo);
---

<section class="w-full h-fit">
	<div
		class="w-full lg:max-w-7xl lg:mx-auto mx-0 lg:h-full flex flex-col items-center px-8 gap-16"
	>
		<TechandTools client:load />
		<TechandToolsMobile />
		<div class="flex flex-col gap-8 items-center">
			<h1
				class="text-green font-bold text-2xl lg:text-nowrap lg:text-4xl mb-8"
				id="projects"
			>
				{t('projects.title')}
			</h1>
			<div
				class="grid lg:grid-cols-3 lg:flex-row w-full gap-12 lg:justify-between justify-center items-center"
			>
				{
					ChallengeInfo.map((info) => (
						<ProjectCard
							image={info.imageURL}
							icon={info.projectIcon}
							name={info.name}
							type={info.type}
							description={info.description}
							listOfIcons={info.listOfIcons}
							appLink={info.appLink}
							repoLink={info.repoLink}
						/>
					))
				}
			</div>
		</div>
		<div class="flex flex-col gap-8 items-center justify-center">
			<h1
				class="text-green font-bold text-center text-2xl lg:text-nowrap lg:text-4xl mb-8"
			>
				{t('projects.professional')}
			</h1>
			<div
				class="grid lg:grid-cols-3 lg:flex-row w-full gap-12 lg:justify-between justify-center items-center"
			>
				{
					ProfessionalInfo.map((info) => (
						<ProjectCard
							image={info.imageURL}
							icon={info.projectIcon}
							name={info.name}
							type={info.type}
							description={info.description}
							listOfIcons={info.listOfIcons}
							appLink={info.appLink}
							repoLink={info.repoLink}
						/>
					))
				}
			</div>
		</div>
	</div>
</section>
