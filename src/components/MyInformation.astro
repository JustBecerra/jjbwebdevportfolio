---
import { t } from 'i18next';
import Sonriente from '../../public/sonriente.webp';
import { Image } from 'astro:assets';
---

<>
	<h1 id="about" class="text-green font-bold text-4xl mb-8">
		{t('about.title')}
	</h1>
	<div class="flex gap-12 flex-col lg:flex-row">
		<div
			class="flex flex-col items-center justify-center text-xl gap-12 text-gray dark:text-white tracking-tight"
		>
			<p>
				{t('about.description')}
			</p>

			<p>
				{t('about.description2')}
			</p>
		</div>
		<div>
			<Image class="rounded-full" src={Sonriente} alt="" />
		</div>
	</div>
</>
